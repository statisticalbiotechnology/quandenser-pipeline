// Needed for singularity //
singularity.enabled=true
singularity.autoMounts=true

// Random hash to use in nextflow //
params.random_hash=""

// Required if not msconvert //
params.db=""

// Required inputs //
params.output_path=""
params.batch_file=""

// Custom mounts //
params.custom_mounts=""

// Editing the nextflow pipeline //
params.parallell_msconvert=true
params.parallell_quandenser=false

// Choosing workflow //
params.workflow="Full"

// Profiles //
profiles {

    local {
        process.executor="local"
    }

    slurm_cluster {
        process.executor="slurm"
        process.clusterOptions="-A <ACCOUNT> -o job.out"
        process.queue="node"

        process {
            withName: msconvert {
                cpus=8
                time="20m"
            }
        }
        process {
            withName: quandenser {
                cpus=8
                time="2h"
            }
        }
        process {
            withName: tide_perc_search {
                cpus=8
                time="3m"
            }
        }
        process {
            withName: triqler {
                cpus=8
                time="10m"
            }
        }
    }
}

// Advanced Settings //

// MSconvert
params.msconvert_additional_arguments=""

// Quandenser
params.max_missing=3
params.quandenser_additional_arguments=""

// Crux
params.precursor_window=20.0
params.missed_clevages=2
params.crux_index_additional_arguments=""
params.crux_search_additional_arguments=""
params.crux_percolator_additional_arguments=""

// Triqler
params.fold_change_eval=0.8
params.triqler_additional_arguments=""
